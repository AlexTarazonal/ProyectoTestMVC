@model IEnumerable<ProyectoTestMVC.Models.Report>

    @{
    ViewData["Title"] = "Reportes";
    }

    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0">Reportes</h1>
            <a asp-action="Create" class="btn btn-success">
                <i class="fa fa-plus me-1"></i> Nuevo Reporte
            </a>
        </div>

        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Transacción</th>
                                <th>Generado</th>
                                <th>Formato</th>
                                <th>Creado</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var rpt in Model)
                        {
                            <tr>
                                <td>@rpt.TransactionId</td>
                                <td>@rpt.GeneratedAt.ToString("g")</td>
                                <td>
                                    <span class="badge bg-secondary text-uppercase">
                                        @rpt.Format
                                    </span>
                                </td>
                                <td>@rpt.CreatedAt.ToString("g")</td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Edit" asp-route-id="@rpt.Id" class="btn btn-outline-primary" title="Editar">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@rpt.Id" class="btn btn-outline-info" title="Ver">
                                            <i class="fa fa-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@rpt.Id" class="btn btn-outline-danger" title="Eliminar">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
