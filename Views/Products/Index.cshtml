@model IEnumerable<ProyectoTestMVC.ViewModels.ProductListViewModel>
    @{
    ViewData["Title"] = "Productos";
    var categories = (List<ProyectoTestMVC.Models.Category>)ViewBag.Categories;
    string? search = (string?)ViewBag.Search;
    int? categoryId = (int?)ViewBag.CategoryId;
    }

    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0">Listado de Productos</h1>
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-lg"></i> Nuevo Producto
            </a>
        </div>

        <div class="card mb-4 shadow-sm">
            <div class="card-body">
                <form method="get" class="row g-2">
                    <div class="col-md-4">
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-search"></i></span>
                            <input type="text" name="search" value="@search" placeholder="Buscar..." class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <select name="categoryId" class="form-select">
                            <option value="">Todas las categorías</option>
                            @foreach (var cat in categories)
                        {
                            <option value="@cat.Id" selected="@(cat.Id == categoryId ? "selected" : null)">
                                @cat.Name
                            </option>
                        }
                        </select>
                    </div>
                    <div class="col-md-4 text-md-end">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="bi bi-funnel"></i> Filtrar
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-clockwise"></i> Limpiar
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <div class="table-responsive shadow-sm">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Nombre</th>
                        <th>Código</th>
                        <th>Precio</th>
                        <th>Categoría</th>
                        <th class="text-center">Stock / Mínimo</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var p in Model)
                {
                    var lowStock = p.TotalStock < p.MinimumStock;
                    <tr class="@(lowStock ? "table-danger" : "")">
                        <td>@p.Name</td>
                        <td>@p.Barcode</td>
                        <td>@p.Price.ToString("C")</td>
                        <td>@p.CategoryName</td>
                        <td class="text-center">
                            <span class="badge @(lowStock ? "bg-danger" : "bg-success")">
                                @p.TotalStock / @p.MinimumStock
                            </span>
                        </td>
                        <td class="text-center">
                            <div class="btn-group btn-group-sm" role="group">
                                <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-warning" title="Editar">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-info" title="Ver detalles">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-danger" title="Eliminar">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
