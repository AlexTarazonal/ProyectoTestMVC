
@model ProyectoTestMVC.Models.Product
@{
    ViewData["Title"] = "Eliminar Producto";
}

<h1>Eliminar Producto</h1>

<h3>¿Seguro que deseas eliminar este producto?</h3>
<div>
    <h4>Producto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Precio</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>

        <dt class="col-sm-2">Código</dt>
        <dd class="col-sm-10">@Model.Barcode</dd>

        <dt class="col-sm-2">Fecha Entrada</dt>
        <dd class="col-sm-10">@Model.EntryDate.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Categoría</dt>
        <dd class="col-sm-10">@Model.Category?.Name</dd>

        <dt class="col-sm-2">Stock Mínimo</dt>
        <dd class="col-sm-10">@Model.MinimumStock</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary ml-2">Cancelar</a>
    </form>
</div>
