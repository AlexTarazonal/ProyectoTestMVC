
@using Microsoft.AspNetCore.Mvc.Rendering
@model ProyectoTestMVC.Models.Product
@{
    ViewData["Title"] = "Editar Producto";
    var categories = (List<ProyectoTestMVC.Models.Category>)ViewBag.Categories;
}
<h1>@ViewData["Title"]</h1>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Barcode"></label>
        <input asp-for="Barcode" class="form-control" />
        <span asp-validation-for="Barcode" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EntryDate"></label>
        <input asp-for="EntryDate" type="date" class="form-control" />
        <span asp-validation-for="EntryDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId">Categoría</label>
        <select asp-for="CategoryId" class="form-control"
                asp-items="@(new SelectList(ViewBag.Categories as IEnumerable<ProyectoTestMVC.Models.Category>, "Id", "Name", Model.CategoryId))">
            <option value="">-- Elige --</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MinimumStock"></label>
        <input asp-for="MinimumStock" class="form-control" />
        <span asp-validation-for="MinimumStock" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}