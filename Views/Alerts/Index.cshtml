@model IEnumerable<ProyectoTestMVC.Models.Alert>

    @{
    ViewData["Title"] = "Alertas";
    }

    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0">Alertas</h1>
            <a asp-action="Create" class="btn btn-success">
                <i class="fa fa-plus me-1"></i> Nueva Alerta
            </a>
        </div>

        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Producto</th>
                                <th>Disparada</th>
                                <th>Notificada</th>
                                <th>Mensaje</th>
                                <th>Creada</th>
                                <th>Actualizada</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var alert in Model)
                        {
                            <tr>
                                <td>@alert.ProductId</td>
                                <td>@alert.TriggeredAt.ToString("g")</td>
                                <td>
                                    @if (alert.IsNotified)
                                    {
                                    <span class="badge bg-success">Sí</span>
                                    }
                                    else
                                    {
                                    <span class="badge bg-warning text-dark">No</span>
                                    }
                                </td>
                                <td>@alert.Message</td>
                                <td>@alert.CreatedAt.ToString("g")</td>
                                <td>@alert.UpdatedAt.ToString("g")</td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Edit" asp-route-id="@alert.Id" class="btn btn-outline-primary" title="Editar">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@alert.Id" class="btn btn-outline-info" title="Ver">
                                            <i class="fa fa-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@alert.Id" class="btn btn-outline-danger" title="Eliminar">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
