@model IEnumerable<ProyectoTestMVC.Models.Transaction>

    @{
    ViewData["Title"] = "Transacciones";
    }

    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0">Transacciones</h1>
            <a asp-action="Create" class="btn btn-success">
                <i class="fa fa-plus me-1"></i> Nueva Transacción
            </a>
        </div>

        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Fecha</th>
                                <th>Producto</th>
                                <th>Almacén</th>
                                <th>Proveedor</th>
                                <th class="text-center">Cantidad</th>
                                <th>Tipo</th>
                                <th>Cliente</th>
                                <th>Usuario</th>
                                <th>Creado</th>
                                <th>Actualizado</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var tx in Model)
                        {
                            <tr>
                                <td>@tx.OccurredAt.ToString("g")</td>
                                <td>@tx.ProductId</td>
                                <td>@tx.WarehouseId</td>
                                <td>@tx.ProviderId</td>
                                <td class="text-center">
                                    <span class="fw-semibold">@tx.Quantity</span>
                                </td>
                                <td>
                                    <span class="badge @(tx.Type == "Ingreso" ? "bg-success" : "bg-danger") text-uppercase">
                                        @tx.Type
                                    </span>
                                </td>
                                <td class="text-truncate" style="max-width: 150px;">
                                    @tx.ClientName
                                </td>
                                <td>@tx.CreatedBy</td>
                                <td>@tx.CreatedAt.ToString("g")</td>
                                <td>@tx.UpdatedAt.ToString("g")</td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Edit" asp-route-id="@tx.Id" class="btn btn-outline-primary" title="Editar">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@tx.Id" class="btn btn-outline-info" title="Ver">
                                            <i class="fa fa-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@tx.Id" class="btn btn-outline-danger" title="Eliminar">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
